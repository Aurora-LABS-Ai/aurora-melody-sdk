{
  "id": "com.auroramelody.random-melody",
  "name": "Random Melody Generator",
  "version": "1.0.0",
  "author": "Aurora Melody Labs",
  "description": "Generates random melodies using musical scales and patterns",
  "entry": "main.py",
  "icon": "icon.png",
  "tags": ["melody", "generator", "random", "scales"],
  "hasUI": true,
  "license": "MIT",
  "parameters": [
    {
      "id": "num_notes",
      "name": "Number of Notes",
      "type": "int",
      "default": 8,
      "min": 1,
      "max": 64,
      "description": "How many notes to generate"
    },
    {
      "id": "note_length",
      "name": "Note Length",
      "type": "float",
      "default": 0.5,
      "min": 0.125,
      "max": 4.0,
      "step": 0.125,
      "description": "Duration of each note in beats"
    },
    {
      "id": "scale",
      "name": "Scale",
      "type": "choice",
      "default": "Major",
      "choices": ["Major", "Minor", "Blues", "Pentatonic", "Dorian", "Mixolydian"],
      "description": "Musical scale to use"
    },
    {
      "id": "octave_range",
      "name": "Octave Range",
      "type": "int",
      "default": 2,
      "min": 1,
      "max": 4,
      "description": "Number of octaves to span"
    }
  ]
}
