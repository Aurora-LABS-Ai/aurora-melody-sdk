{
  "id": "com.auroramelody.ai-melody",
  "name": "AI Melody Generator",
  "version": "1.0.0",
  "author": "Aurora Melody Labs",
  "description": "AI-powered melody generation",
  "type": "ai",
  "entry": "main.py",
  "icon": "icon.png",
  "tags": ["ai", "melody", "generator"],
  "endpoint": "https://api.example.com/generate",
  "controls": [
    {
      "id": "temperature",
      "name": "Temperature",
      "type": "knob",
      "default": 0.7,
      "min": 0.1,
      "max": 1.0,
      "step": 0.1,
      "description": "Higher = more creative"
    },
    {
      "id": "bars",
      "name": "Bars",
      "type": "knob",
      "default": 8,
      "min": 1,
      "max": 32,
      "step": 1
    },
    {
      "id": "style",
      "name": "Style",
      "type": "dropdown",
      "default": "Jazz",
      "choices": ["Jazz", "Classical", "Pop", "Electronic", "Ambient"]
    },
    {
      "id": "density",
      "name": "Note Density",
      "type": "slider",
      "default": 5,
      "min": 1,
      "max": 10,
      "step": 1
    }
  ],
  "hasInput": true,
  "inputPlaceholder": "Describe your melody (optional)..."
}
